CREATE TABLE IF NOT EXISTS mcdonald.address (
    pid int PRIMARY KEY,
    AddressID INT,
    Country TEXT,
    State TEXT,
    City TEXT,
    ZipCode INT,
    StreetAddress TEXT,
    AddressType TEXT
);

SELECT * FROM mcdonald.address;
SELECT * FROM mcdonald.Building;
SELECT * FROM mcdonald.Role;
SELECT * FROM mcdonald.Person;
SELECT * FROM mcdonald.Discount;
SELECT * FROM mcdonald.product;


--Create "Building" Statements
CREATE TABLE IF NOT EXISTS mcdonald.Building (
    pid int PRIMARY KEY,
    BuildingID INT,
    AddressID INT,
    BuildingType TEXT,
);


CREATE TABLE IF NOT EXISTS mcdonald.Role (
    pid int PRIMARY KEY,
    RoleID INT,
    RoleName TEXT,
    SecurityRanking INT,
    BuildingID INT
);


CREATE TABLE IF NOT EXISTS mcdonald.Person (
    pid int PRIMARY KEY,
    PersonID INT,
    FirstName TEXT,
    LastName TEXT,
    DOB TIMESTAMP,
    RoleStatus TEXT,
    RoleID INT,
    AddressID INT
);


CREATE TABLE IF NOT EXISTS mcdonald.Discount (
    pid int PRIMARY KEY,
    DiscountID INT,
    DiscountAmount DOUBLE,
    RequiredSpendAmount INT,
    DiscountDescription TEXT,
    CampaignID INT,
    DiscountType TEXT
);


CREATE TABLE IF NOT EXISTS mcdonald.Product (
    pid int PRIMARY KEY,
    ProductID INT,
    ProductName TEXT,
    ProductType TEXT,
    UnitPrice DOUBLE,
    QuantityPerUnit INT,
    ProductDescription TEXT,
    ProductStatus TEXT
);

*******************************************



CREATE TABLE IF NOT EXISTS mcdonald.CampaignDemographic (
    DemographicID INT GENERATED BY DEFAULT AS IDENTITY,
    AgeLowerLimit INT,
    AgeUpperLimit INT,
    TargetCity VARCHAR(30),
    InteractionFrequencyType VARCHAR(30),
    PRIMARY KEY(DemographicID)
);


CCREATE TABLE IF NOT EXISTS mcdonald.MediaCampaign (
    CampaignID INT GENERATED BY DEFAULT AS IDENTITY,
    StartDate DATE,
    EndDate DATE,
    Budget NUMBER(20,2),
    PersonID INT,
    DemographicID INT,
    CampaignType VARCHAR(30),
    CampaignNotes VARCHAR(500),
    PRIMARY KEY(CampaignID),
    FOREIGN KEY (PersonID) REFERENCES Person(PersonID),
    FOREIGN KEY (DemographicID) REFERENCES CampaignDemographic(DemographicID)
);


CREATE TABLE IF NOT EXISTS mcdonald.Performance (
    PerformanceID INT GENERATED BY DEFAULT AS IDENTITY,
    CampaignID INT,
    PlatformName VARCHAR(50),
    Views INT,
    Likes INT,
    Shares INT,
    CTR NUMBER(10,2),
    CPC NUMBER(10,2),
    PRIMARY KEY(PerformanceID),
    FOREIGN KEY (CampaignID) REFERENCES MediaCampaign(CampaignID)
);


CREATE TABLE IF NOT EXISTS mcdonald.Discount (
    DiscountID INT GENERATED BY DEFAULT AS IDENTITY,
    DiscountAmount NUMBER(5,2),
    RequiredSpendAmount NUMBER(15,2),
    DiscountDescription VARCHAR(500),
    CampaignID INT,
    DiscountType VARCHAR(30),
    PRIMARY KEY(DiscountID),
    FOREIGN KEY (CampaignID) REFERENCES MediaCampaign(CampaignID)
);


CREATE TABLE IF NOT EXISTS mcdonald.Product (
    ProductID INT GENERATED BY DEFAULT AS IDENTITY,
    ProductName VARCHAR(50),
    ProductType VARCHAR(30),
    UnitPrice NUMBER(20,2),
    QuantityPerUnit INT,
    ProductDescription VARCHAR(300),
    ProductStatus VARCHAR(30),
    PRIMARY KEY(ProductID)
);

CREATE TABLE IF NOT EXISTS mcdonald.Transaction (
    TransactionID INT GENERATED BY DEFAULT AS IDENTITY,
    TransactionType VARCHAR2(50),
    Quantity INT,
    DateTime TIMESTAMP,
    DiscountID INT,
    ProductID INT,
    PersonID INT,
    BuildingID INT,
    PRIMARY KEY(TransactionID),
    FOREIGN KEY (DiscountID) REFERENCES Discount(DiscountID),
    FOREIGN KEY (ProductID) REFERENCES Product(ProductID),
    FOREIGN KEY (PersonID) REFERENCES Person(PersonID),
    FOREIGN KEY (BuildingID) REFERENCES Building(BuildingID)
);

CREATE TABLE IF NOT EXISTS mcdonald.TransactionFeedback (
    FeedbackID INT GENERATED BY DEFAULT AS IDENTITY,
    TransactionID INT,
    FeedbackText VARCHAR(500),
    ServiceRating NUMBER(5,2),
    CleanlinessRating NUMBER(5,2),
    PromptnessRating NUMBER(5,2),
    TasteRating NUMBER(5,2),
    RecRating NUMBER(5,2),
    PRIMARY KEY(FeedbackID),
    FOREIGN KEY (TransactionID) REFERENCES Transaction(TransactionID)
);



CREATE TABLE IF NOT EXISTS mcdonald.Compensation (
    BenefitID INT GENERATED BY DEFAULT AS IDENTITY,
    BenefitType VARCHAR(50),
    BenefitAmount NUMBER(15,2),
    PersonID INT,
    PRIMARY KEY(BenefitID),
    FOREIGN KEY (PersonID) REFERENCES Person(PersonID)
);


CREATE TABLE IF NOT EXISTS mcdonald.SupportTicket (
    SupportTicketID INT GENERATED BY DEFAULT AS IDENTITY,
    TransactionID INT,
    PersonID INT,
    TicketDescription VARCHAR(500),
    TicketType VARCHAR(50),
    SubmissionDateTime TIMESTAMP, 
    TicketStatus VARCHAR(30),
    PRIMARY KEY(SupportTicketID),
    FOREIGN KEY (TransactionID) REFERENCES Transaction(TransactionID),
    FOREIGN KEY (PersonID) REFERENCES Person(PersonID)
);

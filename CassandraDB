CREATE TABLE IF NOT EXISTS mcdonald.address (
    pid int PRIMARY KEY,
    AddressID INT,
    Country TEXT,
    State TEXT,
    City TEXT,
    ZipCode INT,
    StreetAddress TEXT,
    AddressType TEXT
);

SELECT * FROM mcdonald.address;
SELECT * FROM mcdonald.Building;
SELECT * FROM mcdonald.Role;
SELECT * FROM mcdonald.Person;
SELECT * FROM mcdonald.Discount;
SELECT * FROM mcdonald.product;


--Create "Building" Statements
CREATE TABLE IF NOT EXISTS mcdonald.Building (
    pid int PRIMARY KEY,
    BuildingID INT,
    AddressID INT,
    BuildingType TEXT,
);


CREATE TABLE IF NOT EXISTS mcdonald.Role (
    pid int PRIMARY KEY,
    RoleID INT,
    RoleName TEXT,
    SecurityRanking INT,
    BuildingID INT
);


CREATE TABLE IF NOT EXISTS mcdonald.Person (
    pid int PRIMARY KEY,
    PersonID INT,
    FirstName TEXT,
    LastName TEXT,
    DOB TIMESTAMP,
    RoleStatus TEXT,
    RoleID INT,
    AddressID INT
);


CREATE TABLE IF NOT EXISTS mcdonald.Discount (
    pid int PRIMARY KEY,
    DiscountID INT,
    DiscountAmount DOUBLE,
    RequiredSpendAmount INT,
    DiscountDescription TEXT,
    CampaignID INT,
    DiscountType TEXT
);


CREATE TABLE IF NOT EXISTS mcdonald.Product (
    pid int PRIMARY KEY,
    ProductID INT,
    ProductName TEXT,
    ProductType TEXT,
    UnitPrice DOUBLE,
    QuantityPerUnit INT,
    ProductDescription TEXT,
    ProductStatus TEXT
);



CREATE TABLE IF NOT EXISTS mcdonald.CampaignDemographic (
    pid int PRIMARY KEY,
    DemographicID INT,
    AgeLowerLimit INT,
    AgeUpperLimit INT,
    TargetCity TEXT,
    InteractionFrequencyType INT
);


CREATE TABLE IF NOT EXISTS mcdonald.MediaCampaign (
    pid int PRIMARY KEY,
    CampaignID INT,
    StartDate TIMESTAMP,
    EndDate TIMESTAMP,
    Budget INT,
    PersonID INT,
    DemographicID INT,
    CampaignType INT,
    CampaignNotes INT
);


CREATE TABLE IF NOT EXISTS mcdonald.Performance (
    pid int PRIMARY KEY,
    PerformanceID INT,
    CampaignID INT,
    PlatformName TEXT,
    Views INT,
    Likes INT,
    Shares INT,
    CTR INT,
    CPC DOUBLE
);




CREATE TABLE IF NOT EXISTS mcdonald.Transaction (
    pid int PRIMARY KEY,
    TransactionID INT,
    TransactionType TEXT,
    Quantity INT,
    DateTime TIMESTAMP,
    DiscountID INT,
    ProductID INT,
    PersonID INT,
    BuildingID INT
);



CREATE TABLE IF NOT EXISTS mcdonald.TransactionFeedback (
    pid int PRIMARY KEY,
    FeedbackID INT,
    TransactionID INT,
    FeedbackText TEXT,
    ServiceRating INT,
    CleanlinessRating INT,
    PromptnessRating INT,
    TasteRating INT,
    RecRating INT
);


CREATE TABLE IF NOT EXISTS mcdonald.Compensation (
    pid int PRIMARY KEY,
    BenefitID INT,
    BenefitType TEXT,
    BenefitAmount INT,
    PersonID INT,

);


CREATE TABLE IF NOT EXISTS mcdonald.SupportTicket (
    pid int PRIMARY KEY,
    SupportTicketID INT,
    TransactionID INT,
    PersonID INT,
    TicketDescription TEXT,
    TicketType TEXT,
    SubmissionDateTime TIMESTAMP, 
    TicketStatus TEXT
);
